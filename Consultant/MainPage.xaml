<Page
    x:Class="Consultant.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Consultant"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    
    
    <StackPanel Margin="50" Spacing="50">
        <Popup x:Name="PopupText" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <StackPanel BorderBrush="White" Background="White" BorderThickness="2">
                <TextBlock Text="Something" Foreground="Black"/>
            </StackPanel>
        </Popup>
        <Button Content="Start" Click="Button_Click"/>
        <TextBlock x:Name="OutputTextBlock" SelectionChanged="OutputTextBlock_SelectionChanged" IsTextSelectionEnabled="True" SelectionHighlightColor="Transparent" Text="{Binding Path=CurrentMessage}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ListView HorizontalAlignment="Center" Width="200" Height="200" ItemsSource="{Binding Path=MainWords}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <TextBlock Text="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>
