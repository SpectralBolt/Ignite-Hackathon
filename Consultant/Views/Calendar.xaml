<Page
    x:Class="Consultant.Views.Calendar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Consultant.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid Margin="10">
        <Popup x:Name="PopupCalendar" Tapped="Image_Tapped">
            <CalendarView x:Name="Calend" SelectionMode="Multiple">
                <CalendarView.SelectedForeground>
                    <AcrylicBrush TintColor="DarkRed" TintLuminosityOpacity="5"/>
                </CalendarView.SelectedForeground>
            </CalendarView>
        </Popup>
        <Image Source="../Images/Calendar.jpeg" Stretch="Fill" Tapped="Image_Tapped"/>
        
    </Grid>
</Page>
